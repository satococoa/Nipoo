<!DOCTYPE html>
<html>
<head>
  <title>Nipoo</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to 'Nipoo!', :root, :class => 'brand' %>
        <ul class="nav">
          <li <%= "class=active" if current_page?(:reports) %>>
            <%= link_to 'Reports', :reports %>
          </li>
          <li <%= "class=active" if current_page?(:new_report) %>>
            <%= link_to 'New Report', :new_report %>
          </li>
        </ul>
        <ul class="nav pull-right">
          <li <%= "class=active" if current_page?(:my_reports) %>>
            <%= link_to 'My Reports', :my_reports %>
          </li>
          <% if logged_in? %>
            <li><%= link_to 'Logout', :logout %></li>
          <% else %>
            <li><%= link_to 'Login', :login %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="container-fluid">

    <div class="row-fluid">
      <div class="span12">
        <% if flash[:notice].present? %>
          <div class="alert alert-success">
            <%= flash[:notice] %>
          </div>
        <% end %>

        <% if flash[:alert].present? %>
          <div class="alert alert-error">
            <%= flash[:alert] %>
          </div>
        <% end %>
      </div>
    </div>

    <%= yield %>

  </div>
</body>
</html>
